{
    "name": "Sunset Tracker",
    "version": "1.0.0",
    "description": "This is an extension that tracks the sunset based on user's locations",
    "manifest_version": 2,
    "author": "Team Sunset",
    "permissions": ["storage"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["main.js"]
        }
    ],
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "Sunset Tracker"
    },
    "icons": {
        "16": "./img/sunset-logo16.png",
        "32": "./img/sunset-logo32.png",
        "48": "./img/sunset-logo48.png",
        "128": "./img/sunset-logo128.png"
    }
}